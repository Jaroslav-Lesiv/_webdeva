.text
    &-center
        text-align: center
    &-left
        text-align: left
    &-right
        text-align: right
    &-uppercase
        text-transform: uppercase
    &-lowercase
        text-transform: lowercase
    &-elipsis
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        max-width 80vw



body, h1, h2, h3, h4, h5, h6, button,  span,p, strong,a
    font-size-adjust: 0.5
    text-rendering: optimizeLegibility;
    font-weight: 400
    line-height: 1.7
    font-family: $font, 'Raleway','Helvetica','Arial',sans-serif
    &.bold
        font-weight: 600
body, h1, h2, h3, h4, h5, h6, button,  span,p
    color: $colorGrey
    font-family: inherit
p
    font-size: 17px
p, div, li
    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
h1,h2,h3,h4,h5,h6,.link, a, strong
    font-family: $font, "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-weight: 600
/* Body Content */
.title
    // font-size: 3.5em
    // text-align: center
    font-weight: 500
    font-size: 42px;
    font-family:  $font;
    // text-transform: uppercase;
.subtitle
    width: 100%
    &:hover
        color: $primary
.section
    &-title
        transform: translateY(-30px);
        font-size: 3em;
        text-shadow: 0 0 10px rgba(0,0,0,0.5), 5px 6px 10px rgba(0,0,0,0.7)
        width: 100%
        text-align: center
        align-self: flex-start
        position absolute
        top: 0
        @media all and (max-width 990px)
            font-size: 2.5em
            transform: translateY(-20px);
        @media all and (max-width 556px)
            font-size: 2em
            transform: translateY(-15px);
            
        &::before, &::after
            color: $primary
        &::before
            content: attr(data-before)
            margin-right: 15px
        &::after
            content: attr(data-after)
            margin-left: 15px
        &-not_rotate
            transform:  translateY(-30px) rotate(-2deg) !important;
            
.shadow
    &_elegant
        color: #131313;
        letter-spacing: .15em;
        text-shadow: 
        1px -1px 0 #767676, 
        -1px 2px 1px #737272, 
        -2px 4px 1px #767474, 
        -3px 6px 1px #787777, 
        -4px 8px 1px #7b7a7a, 
        -5px 10px 1px #7f7d7d, 
        -6px 12px 1px #828181, 
        -7px 14px 1px #868585, 
        -8px 16px 1px #8b8a89, 
        -9px 18px 1px #8f8e8d, 
        -10px 20px 1px #949392, 
        -11px 22px 1px #999897, 
        -12px 24px 1px #9e9c9c, 
        -13px 26px 1px #a3a1a1, 
        -14px 28px 1px #a8a6a6, 
        -15px 30px 1px #adabab, 
        -16px 32px 1px #b2b1b0, 
        -17px 34px 1px #b7b6b5, 
        -18px 36px 1px #bcbbba, 
        -19px 38px 1px #c1bfbf, 
        -20px 40px 1px #c6c4c4, 
        -21px 42px 1px #cbc9c8, 
        -22px 44px 1px #cfcdcd, 
        -23px 46px 1px #d4d2d1, 
