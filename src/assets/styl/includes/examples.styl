.mobile
  width: 113px
  height: 243px
  background-color: #8d8d8d
  border-radius: 12px
  padding: 3px
  position: relative
  &:before
    content: ''
    position: absolute
    height: 10px
    background-color: #8d8d8d
    width: 60px
    top: 0
    left: 50%
    margin-left: -30px
    border-bottom-left-radius: 4px
    border-bottom-right-radius: 4px
    z-index: 2

